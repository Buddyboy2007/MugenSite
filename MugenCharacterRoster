","Remake Version","Ryougi","Rocky","Rozwel Gustab AI","R_Gouki","Sagat","SagatMG","Sakuya","SFZ_Ehnyd","Shin","Shin Akuma","Shin_AI-Patch","SHIN RYU","ShinSmoke Ryu","Shadow","Shadow JUS Updated","Shaqu","Silver","Sonic V1.0","Spiderman","spengbab","SSG_GokuZ2","SSGSS_GokuZ2","SSJ 2 GokuZ2","SSJ3_GokuZ2i","SSJ4Blory_KN.edit","SSJBlue_VegettoZ2","SSJ_Goku_LegendaryZ2","Super Better Luigi","Super Better Mario","Super Better Yoshi","Super Bad Mario","Super Goku Boss Ultimate","Super Gogeta4","Super Vegetto4","SuperVegettoAI","Supa Cirno","Symbiote_Spiderman","TailsMHII","TenShinHanZ2","TerranceBongo","Terry-KOF98","Thaldrix","ThoutherMario","the-kung-fu-man","TJ Combo","Tohno Akiha","Toriel","TurboModeGouki","Ultimate_Bad_Time_Sans_R","Ultimate_Ken","Ultimate_Ryu","UC.Falcon","VGA_bowser","Vegeta All Forms","Vegeta Super Transform 1.6","VegettoBlue","VegettoBlue_KN","VegettoZ2","Violent Ken SF3","wario","Washizuka3","Xeno GogetaSSJ4","XRyu","YamchaZ2i","Yang","yujiro","yuki","Zorf-slc","Zhou Lee","Zarak"
        ];

        const colors = ["#ff4d4d", "#4dff4d", "#4d4dff", "#ff4dff", "#4dffff", "#ffff4d", "#ff944d", "#944dff", "#4dff94", "#ff4d94"];

        const homeButtons = document.getElementById('homeButtons');
        const homePage = document.getElementById('homePage');
        const characterPage = document.getElementById('characterPage');
        const characterList = document.getElementById('characterList');
        const searchBox = document.getElementById('searchBox');

        // Generate alphabetical buttons for home page
        const letters = [...new Set(characters.map(c => c[0].toUpperCase()))].sort();
        letters.forEach(letter => {
            const btn = document.createElement('button');
            btn.textContent = letter;
            btn.onclick = () => showCharacters(letter);
            homeButtons.appendChild(btn);
        });

        function showCharacters(letter) {
            homePage.style.display = 'none';
            characterPage.style.display = 'block';
            const filtered = characters.filter(c => c[0].toUpperCase() === letter);
            renderList(filtered);
        }

        function goHome() {
            homePage.style.display = 'flex';
            characterPage.style.display = 'none';
            searchBox.value = '';
        }

        function renderList(list) {
            characterList.innerHTML = '';
            list.forEach((char, index) => {
                const li = document.createElement('li');
                li.textContent = char;
                li.style.color = colors[index % colors.length];
                characterList.appendChild(li);
            });
        }

        searchBox.addEventListener('input', function() {
            const query = this.value.toLowerCase();
            const filtered = characters.filter(c => c.toLowerCase().includes(query));
            renderList(filtered);
        });
    </script>
